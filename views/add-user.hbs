<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">New user</li>
  </ol>
</nav>

<!-- form validation not rly included -->
{{#if alert}}
  <div
    class="alert alert-sucess alert-dismissible fade show"
    role="alert"
  >
    {{alert}}
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    >
    </button>

  </div>
{{/if}}

<form
  class="row g-3 needs-validation"
  method="post"
  action="/adduser"
  novalidate
>

  <div class="div col-6">
    <div class="form-floating mb-3">
      <input
        type="text"
        class="form-control"
        id="floatingInput"
        placeholder="First Name"
        name="newUserFormFirstName"
      />
      <label for="floatingInput">First Name</label>
    </div>
  </div>
  <div class="div col-6">
    <div class="form-floating mb-3">
      <input
        type="text"
        class="form-control"
        id="floatingInput"
        placeholder="Last Name"
        name="newUserFormLastName"
      />
      <label for="floatingInput">Last Name</label>
    </div>
  </div>
  <div class="div col-6">
    <div class="form-floating mb-3">
      <input
        type="text"
        class="form-control"
        id="floatingInput"
        placeholder="email@email.com"
        name="newUserFormEmail"
      />
      <label for="floatingInput">Email</label>
    </div>
  </div>
  <div class="div col-6">
    <div class="form-floating mb-3">
      <input
        type="text"
        class="form-control"
        id="floatingInput"
        placeholder="Phone"
        name="newUserFormPhone"
      />
      <label for="floatingInput">Phone</label>
    </div>
  </div>

  <div class="div col-12">
    <div class="form-floating mb-3">
      <input
        type="text"
        class="form-control"
        id="floatingInput"
        placeholder="Comments"
        name="newUserFormComments"
      />
      <label for="floatingInput">Comments...</label>
    </div>
  </div>

  <div class="col-12 d-grid">
    <button class="btn btn-primary" type="submit"> submit USER </button>
  </div>

</form>